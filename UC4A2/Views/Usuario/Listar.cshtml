@using Microsoft.AspNetCore.Http;
@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Listagem de usuário";
}

<h2>Listagem de usuário</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data de Nascimento</th>
            @if(Context.Session.GetInt32("IdUsuario") != null) 
                {
                    <th>Operações</th>
                }
        </tr>
    </thead>
    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                <td>@u.Senha</td>
                <td>@u.DataNascimento.ToShortDateString()</td>
                @if(Context.Session.GetInt32("IdUsuario") != null)
                {   
                        <td>
                        <a href="/Usuario/Deletar?Id=@u.Id" onclick="return confirm('Deseja excluir?')">Remover</a>
                        <a href="/Usuario/Editar?Id=@u.Id">Alterar</a>
                        </td>
                }
            </tr>
        }
    </tbody>
</table>